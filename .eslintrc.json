{
    "parserOptions": {
        "ecmaVersion": 9,
        "ecmaFeatures": {
            "arrowFunctions": true,
            "impliedStrict": true
        }
    },
    "plugins": [
        "security"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:security/recommended"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
